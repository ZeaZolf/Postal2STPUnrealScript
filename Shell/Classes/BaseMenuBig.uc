class BaseMenuBig extends ShellMenuCW;


///////////////////////////////////////////////////////////////////////////////
// Vars, structs, consts, enums...
///////////////////////////////////////////////////////////////////////////////

var Texture TitleTexture;


///////////////////////////////////////////////////////////////////////////////
// Create menu contents
///////////////////////////////////////////////////////////////////////////////
function CreateMenuContents()
	{
	Super.CreateMenuContents();
	ItemFont = F_FancyXL;
	ItemAlign = TA_Center;
	}

///////////////////////////////////////////////////////////////////////////////
// Default properties
///////////////////////////////////////////////////////////////////////////////
defaultproperties
	{
	MenuWidth = 550

	TitleHeight = 100
	TitleSpacingY = 0
	TitleTexture = Texture'GameCustom.GameTitle_Menu'

	ItemHeight = 50
	ItemSpacingY = 5
	}
